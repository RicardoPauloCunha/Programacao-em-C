@using Senai.Finacas.Web.Mvc.Models;

@{
    ViewBag.Title = "Editar Usuario";
    Layout = "MasterPageDeslogado";
}

@{
    UsuarioModel usuario = ViewBag.Usuario;
    string dataNascimento = usuario.DataNascimento.ToString("yyyy-MM-dd");
}

@* criar um comentario *@
<h1>Formulario de Edição</h1>

        @ViewBag.Mensagem

        <form action ="/Usuario/Editar" method="POST" class="form">
            <input type="hidden" value="@usuario.Id" name="id">
            <label>
                Nome
                <input type="text" name="nome" value="@usuario.Nome" class="campo">
            </label>

            <label>
                Email
                <input type="email" name="email" value="@usuario.Email" class="campo">
            </label>

            <label>
                Senha
                <input type="password" name="senha" value="@usuario.Senha" class="campo">
            </label>

            <label>
                Data de Nascimento
                <input type="date" name="dataNascimento" value="@dataNascimento" class="text-box">
            </label>

            <input type="submit" valur="Enviar" class="submite">
        </form>    